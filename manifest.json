{
    "name": "Ask AI",
    "description": "Chrome Extension That Uses Built-in AI APIs.",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon-128.png"
    },
    "permissions": [
        "nativeMessaging",
        "activeTab",
        "contextMenus"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "images/drag-drop.png",
                "images/icon-128.png",
                "injected_html.html",
                "style.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}